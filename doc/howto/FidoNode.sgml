ln -s /usr/local/lib/fidogate/areas.bbs
ln -s /usr/local/lib/fidogate/fareas.bbs
ln -s /usr/local/lib/fidogate/packing
ln -s /usr/local/lib/fidogate/passwd
ln -s /usr/local/lib/fidogate/routing
